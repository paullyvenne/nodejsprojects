<div class="control-group">
  <label for="name" class="control-label">name</label>
  <div class="controls">
    <%- contentTag('input', user.name, {type:'text', class:'span6', name:'name'}) %>
  </div>
</div>
<div class="control-group">
  <label for="age" class="control-label">age</label>
  <div class="controls">
    <%- contentTag('input', user.age, {type:'number', class:'span2', name:'age'}) %>
  </div>
</div>
<div class="control-group">
  <label for="location" class="control-label">location</label>
  <div class="controls">
    <%- contentTag('input', user.location, {type:'text', class:'span6', name:'location'}) %>
  </div>
</div>
<div class="control-group">
  <label for="isEnabled" class="control-label">isEnabled</label>
  <div class="controls">
    <select name="isEnabled", class="span1">
      <% if(user.isEnabled) { -%>
      <option>false</option>
      <option selected>true</option>
      <% } else { -%>
      <option selected>false</option>
      <option>true</option>
      <% } -%>
    </select>
  </div>
</div>
<div class="control-group">
  <label for="role" class="control-label">role</label>
  <div class="controls">
    <%- contentTag('input', user.role, {type:'text', class:'span6', name:'role'}) %>
  </div>
</div>
