<div class="hero-unit">
  <form id="{name:Paul}-form" class="form-horizontal" action="/{name:_paul}s" method="POST">
    <fieldset>
      <legend>Create a new {name:Paul}</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {{name:Paul}: {}}) %>

      <div class="form-actions">
        <%- contentTag('input', 'Add', {type: 'submit', class: 'btn btn-primary'}) %>
      </div>
    </fieldset>
  </form>
</div>
